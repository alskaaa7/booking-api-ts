{
  "name": "booking-api-ts",
  "version": "1.0.0",
  "description": "Event booking system with Node.js, PostgreSQL, Redis and RabbitMQ",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest __tests__/integration",
    "test:unit": "jest __tests__/unit",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:teardown": "docker-compose -f docker-compose.test.yml down",
    "test:all": "npm run test:setup && sleep 10 && npm test && npm run test:teardown",
    "test:ci": "npm run test:setup && sleep 10 && npm run test:coverage && npm run test:teardown"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
